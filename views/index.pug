include ./components/head.pug
body
  header
    .logo
      a(href="/index") 
        h1 #{title || "Homes"}
    if email 
      p #{"Wellcome "+email.split("@")[0].toUpperCase()+"üñê" || "user"}
    a#proIcon(href="/profile" title="Profile & Results") üë§ 
  main
    include ./components/nav.pug
    section 
      if data
        - const groups = {}
        each item in data
          - if (!groups[item.subject]) groups[item.subject] = []
          - groups[item.subject].push(item)
        center
          h3.notice Please choese a subject.
        .categoryItem
          each items, subject in groups
            .subjectBox
              h5 #{subject} (#{items.length})
              ul
                each it in items
                  a(href=`/subject/${it._id}`)
                    li= it.subject
                      sub #{it.email ? " "+it.email.split("@")[0].toLowerCase():null}
      else 
        .news 
          center  
            h3.notice INFORMATIONS
          p Select your semester to view available quizzes<br>
            | and try your best to score high.<br>
            | Keep practcing to make your skill batter.<br>
            | Stay tuned for updates and new quizzes!
  include ./components/footer.pug